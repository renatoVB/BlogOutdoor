<%= form_for(@article)  do |f| %>
<% @article.errors.full_messages.each do |message| %>
	<div class="be-error white top-space">
	 * <%= message %>
	</div>
<%end%>
<div class="field">
	<%= f.text_field :title, placeholder: "Titulo del articulo", class:"form-control" %>
</div>
<div class="field">
	<%= f.text_area :body, placeholder: "Escribe el contenido del articulo", style:"height:300px;", class:"form-control"  %>
</div>
<div class="field">
	<%= f.submit "Guardar", class:"btn be-color-background white" %>
<%end%>